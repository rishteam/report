\ProvidesPackage{rish}

\RequirePackage{booktabs}
\RequirePackage{caption}
\RequirePackage{subcaption}

% https://tex.stackexchange.com/questions/84172/possible-to-create-bullets-for-subitems-using-itemize-without-a-nested-list
\newcommand{\SubItem}[1]{
    {\setlength\itemindent{15pt} \item[--] #1}
}

\newcommand{\SubSubItem}[1]{
    {\setlength\itemindent{30pt} \item[--] #1}
}

\newcommand{\SubSubSubItem}[1]{
    {\setlength\itemindent{45pt} \item[--] #1}
}

\newcommand\headercell[1]{%
   \smash[b]{\begin{tabular}[t]{@{}c@{}} #1 \end{tabular}}}
